{
  "name": "@harmonyjs/controller-spa",
  "version": "1.0.0-rc.1",
  "description": "Single Page Application controller for Harmony",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "mixt": {
    "dist": "./pkg"
  },
  "scripts": {
    "mixt:build": "pika build",
    "mixt:watch": "nodemon -e ts,js,tsx,jsx,json,yml --watch src --exec \"npm run build\"",
    "mixt:release": "cd ./pkg && npm publish"
  },
  "keywords": [
    "SPA",
    "Harmony",
    "HarmonyJS"
  ],
  "author": "Jérémie van der Sande <jeremie.vandersande@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "hapi-react-views": "^10.0.1",
    "http-proxy": "^1.17.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
