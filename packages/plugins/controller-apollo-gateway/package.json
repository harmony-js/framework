{
  "name": "@harmonyjs/controller-apollo-gateway",
  "version": "1.0.0-rc.3",
  "description": "Apollo Gateway controller for Harmony",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@harmonyjs/pika-plugin-ts-resolve-imports"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "mixt": {
    "dist": "./pkg"
  },
  "scripts": {
    "mixt:build": "pika build",
    "mixt:watch": "nodemon -e ts,js,tsx,jsx,json,yml --watch src --exec \"npm run mixt:build\"",
    "mixt:release": "cd ./pkg && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jvdsande/harmonyjs.git"
  },
  "keywords": [
    "Apollo",
    "Gateway",
    "Federation",
    "GraphQL",
    "Harmony",
    "HarmonyJS"
  ],
  "author": "Jérémie van der Sande <jeremie.vandersande@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^3.7.5"
  }
}
